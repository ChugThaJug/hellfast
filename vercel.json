{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "PADDLE_SANDBOX": "true",
    "APP_ENV": "development"
  },
  "buildCommand": "cd frontend && npm install --no-package-lock && npm run build",
  "outputDirectory": "frontend/build",
  "framework": "sveltekit",
  "installCommand": "cd frontend && npm install --no-package-lock",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
