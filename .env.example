# Core Settings
APP_ENV=development  # 'development' or 'production'
DATABASE_URL=postgresql://postgres:postgres@localhost/ytprocessing

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth Settings
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
OAUTH_REDIRECT_URL=http://localhost:8000/oauth/google/callback
FRONTEND_URL=http://localhost:5173

# Paddle Settings (Payments)
PADDLE_API_KEY=your-paddle-api-key-here
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret-here
PADDLE_SANDBOX=true
PADDLE_PRO_PLAN_ID=your-paddle-pro-plan-id-here
PADDLE_PRO_YEARLY_PLAN_ID=your-paddle-pro-yearly-plan-id-here
PADDLE_MAX_PLAN_ID=your-paddle-max-plan-id-here
PADDLE_MAX_YEARLY_PLAN_ID=your-paddle-max-yearly-plan-id-here

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
REPLICATE_API_TOKEN=your-replicate-api-token-here

# Frontend Environment Variables (copy to .env in frontend folder)
VITE_API_BASE_URL=http://localhost:8000
VITE_USE_DEV_AUTH=true
VITE_PADDLE_SANDBOX=true
VITE_PADDLE_VENDOR_ID=your-paddle-vendor-id-here